<% if user_signed_in? %>
  <table class="table-sm table-hover">
    <thead>
    <tr>
      <th><%= t('views.goal.title') %></th>
      <th><%= t('views.goal.opt_assessment') %></th>
      <th><%= t('views.goal.nom_rating') %></th>
      <th><%= t('views.goal.pes_assessment') %></th>
      <th><%= t('views.goal.exp_duration') %></th>
      <th><%= t('views.goal.pos_deviation') %></th>
    </tr>
    </thead>
    <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.title %></td>
        <td><%= goal.opt_assessment %></td>
        <td><%= goal.nom_rating %></td>
        <td><%= goal.pes_assessment %></td>
        <td><%= goal.exp_duration %></td>
        <td><%= goal.pos_deviation %></td>
        <td><%= link_to fa_icon('edit'), edit_goal_path(goal), title: t('views.goal.edit') %></td>
        <td><%= link_to fa_icon('archive'), pre_archived_goal_path(goal), title: t('views.goal.archive') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p> <%= t('views.goal.no_goal') %> </p>
<% end %>

<%= link_to t('views.goal.new_goal'), new_goal_path, class: 'btn btn-light' %>